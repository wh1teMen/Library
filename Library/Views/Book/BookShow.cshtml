@model List<Book>
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<div style="display:flex; flex-wrap:wrap;">
    @foreach (var el in Model)
    {
        <div class="card mb-3" style="max-width: 600px; margin:15px;display:flex; ">
            <div class="row g-0" style="display:flex">

                <div class="col-md-10" style="display:flex">
                    <div class="col-md-6">
                        <img src="~/img/book.png" style="height:150px" alt="Book">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Автор: @el.Autor</h5>
                        <p class="card-text"> @el.Description</p>
                        <p class="card-text"><small class="text-muted">Год издания: @el.Year_of_publication</small></p>
                        <p class="card-text"><small class="text-muted">Количесвто страниц: @el.Number_of_pages</small></p>
                    </div>
                </div>
            </div>
        </div>
             
    }

</div>
